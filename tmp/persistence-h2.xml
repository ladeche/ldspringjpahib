<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence 
   http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">

	<!-- transaction-type is RESOURCE_LOCAL or JTA -->
	<persistence-unit name="batchPersistenceUnit"
		transaction-type="RESOURCE_LOCAL">
		<non-jta-data-source>jdbc/batchDataSource</non-jta-data-source>

		<!-- configuration specific to a database is kept outside java code and 
			annotations. Here, we configure key generations : oracle sequences, mysql, 
			postgresql and hsqldb autoincrement -->
		<mapping-file>orm_other_identity.xml</mapping-file>

		<class>com.orange.batch.model.persistent.Market</class>

		<!-- Avoid to scan *.class and *.hbm.xml -->
		<exclude-unlisted-classes />

		<!-- if using second level caching -->
		<shared-cache-mode>ENABLE_SELECTIVE</shared-cache-mode>

		<!-- Bean validation is deactivated by default -->
		<validation-mode>NONE</validation-mode>

		<!-- hibernate provider configuration -->
		<!-- see http://docs.jboss.org/hibernate/core/4.2/manual/en-US/html_single/#session-configuration -->
		<properties>
			<!-- replace with correct database dialect -->
			<property name="hibernate.dialect" value="org.hibernate.dialect.H2Dialect" />
			<!-- set to 'true' if using second level caching -->
			<property name="hibernate.cache.use_second_level_cache"	value="false" />
			<property name="hibernate.cache.use_query_cache" value="false" />

			<!-- EHCache as Hibernate's 2nd-level cache provider -->
			<property name="hibernate.cache.region.factory_class"
				value="org.hibernate.cache.ehcache.EhCacheRegionFactory" />
			<property name="net.sf.ehcache.configurationResourceName"
				value="ehcache-config.xml" />

			<!-- Hibernate's caches strategies -->
			<property name="hibernate.cache.default_cache_concurrency_strategy"
				value="read-only" />
			<property
				name="hibernate.ejb.classcache.com.orange.batch.model.persistent.Market"
				value="read-only" />

			<property name="hibernate.connection.release_mode" value="auto" />

			<!-- development configuration - switch to false in production mode -->
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.format_sql" value="true" />
			<!-- See consumerJpaLayerContext.xml for exposing statistics on JMX -->
			<property name="hibernate.generate_statistics" value="true" />

			<!-- create database schema at startup -->
			<!-- only for h2 on development mode -->
			<property name="hibernate.hbm2ddl.auto" value="create" />

		</properties>

	</persistence-unit>

</persistence>